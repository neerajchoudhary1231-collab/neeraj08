#include <stdio.h>

int main(){
    int n; printf("Half height: "); scanf("%d",&n); // diamond height = 2*n-1
    // upper
    for(int i=1;i<=n;i++){
        for(int s=0;s<n-i;s++) putchar(' ');
        for(int j=0;j<2*i-1;j++) putchar('*');
        putchar('\n');
    }
    // lower
    for(int i=n-1;i>=1;i--){
        for(int s=0;s<n-i;s++) putchar(' ');
        for(int j=0;j<2*i-1;j++) putchar('*');
        putchar('\n');
    }
    return 0;
}
