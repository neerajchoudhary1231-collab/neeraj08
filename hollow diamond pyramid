#include <stdio.h>

int main(){
    int n; printf("Rows: "); scanf("%d",&n);
    for(int i=n;i>=1;i--){
        for(int s=0;s<n-i;s++) putchar(' ');
        for(int j=1;j<=2*i-1;j++){
            if(i==n || j==1 || j==2*i-1) putchar('*');
            else putchar(' ');
        }
        putchar('\n');
    }
    return 0;
}
